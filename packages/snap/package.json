{
  "name": "@fort-major/masquerade",
  "version": "0.2.0",
  "description": "Privacy-focused MetaMask snap for the Internet Computer (ICP)",
  "keywords": [
    "MetaMask",
    "web3",
    "Internet Computer",
    "ICP",
    "wallet",
    "authorization",
    "login",
    "crypto",
    "icrc1",
    "agent"
  ],
  "main": "dist/bundle.js",
  "types": "",
  "author": "seniorjoinu <senior.joinu@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fort-major/masquerade.git"
  },
  "bugs": {
    "url": "https://github.com/fort-major/masquerade/issues"
  },
  "homepage": "https://github.com/fort-major/masquerade#readme",
  "scripts": {
    "build": "pnpm run version:set && mm-snap build -s src/index.ts",
    "verify": "mm-snap manifest --fix",
    "dev": "mm-snap watch -s src/index.ts -d dist",
    "pub": "npm run build && npm run verify && npm publish",
    "version:set": "node ../../set-version.js"
  },
  "devDependencies": {
    "@metamask/snaps-cli": "^1.0.2",
    "@metamask/snaps-types": "^1.0.2",
    "envify": "4.1.0"
  },
  "dependencies": {
    "@metamask/snaps-ui": "^1.0.2",
    "@fort-major/masquerade-shared": "workspace:*"
  }
}